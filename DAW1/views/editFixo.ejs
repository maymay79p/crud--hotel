<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Editar Fixo</title>
    <style>
        body { background-color: #f6eee3; color: #5a3e36; font-family: 'Segoe UI', sans-serif; }
        .container { width: 500px; margin: 50px auto; background-color: #fffaf5; padding: 30px;
            border-radius: 14px; box-shadow: 0 8px 20px rgba(90, 62, 54, 0.3); border: 2px solid #a0522d; }
        h1 { text-align: center; color: #8b4513; }
        label { display: block; margin-top: 15px; font-weight: bold; }
        select, input { width: 100%; padding: 10px; border: 2px solid #a0522d;
            border-radius: 10px; background-color: #fffdfb; }
        .btn { margin-top: 25px; width: 100%; background-color: #a0522d; color: white;
            border: none; padding: 12px; border-radius: 10px; cursor: pointer; }
        .btn:hover { background-color: #8b4513; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Editar Serviço Fixo</h1>
        <form action="/fixo/update/<%= fixo._id %>" method="POST">
            <label>Quarto:</label>
            <select name="quarto" required>
                <% quartos.forEach(quarto => { %>
                    <option value="<%= quarto._id %>" <%= fixo.quarto.equals(quarto._id) ? 'selected' : '' %>>
                        Andar: <%= quarto.andar %> | Tipo: <%= quarto.tipquarto.nome || quarto.tipquarto %>
                    </option>
                <% }) %>
            </select>

            <label>Serviço:</label>
            <select name="servico" required>
                <% servicos.forEach(servico => { %>
                    <option value="<%= servico._id %>" <%= fixo.servico.equals(servico._id) ? 'selected' : '' %>>
                        <%= servico.descricao %>
                    </option>
                <% }) %>
            </select>

            <label>Descrição do Serviço:</label>
            <input type="text" name="Descricao" value="<%= fixo.Descricao %>" required>

            <button class="btn" type="submit">Salvar Alterações</button>
        </form>
    </div>
</body>
</html>
