<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Adicionar Extra</title>
    <style>
        body { background-color: #f6eee3; color: #5a3e36; font-family: 'Segoe UI', sans-serif; }
        .container { width: 500px; margin: 50px auto; background-color: #fffaf5; padding: 30px;
            border-radius: 14px; box-shadow: 0 8px 20px rgba(90, 62, 54, 0.3); border: 2px solid #a0522d; }
        h1 { text-align: center; color: #8b4513; }
        label { display: block; margin-top: 15px; font-weight: bold; }
        select, input { width: 100%; padding: 10px; border: 2px solid #a0522d;
            border-radius: 10px; background-color: #fffdfb; }
        .btn { margin-top: 25px; width: 100%; background-color: #a0522d; color: white;
            border: none; padding: 12px; border-radius: 10px; cursor: pointer; }
        .btn:hover { background-color: #8b4513; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Adicionar Extra</h1>
        <form action="/extra/add" method="POST">
            <label>Contrato:</label>
            <select name="contrato" required>
                <% contratos.forEach(contrato => { %>
                    <option value="<%= contrato._id %>">
                        Cliente: <%= contrato.cliente.nome %> | Quarto: <%= contrato.quarto.tipquarto.nome || contrato.quarto.tipquarto %> - Andar <%= contrato.quarto.andar %>
                    </option>
                <% }) %>
            </select>

            <label>Servi√ßo:</label>
            <select name="servico" required>
                <% servicos.forEach(servico => { %>
                    <option value="<%= servico._id %>"><%= servico.descricao %> - R$ <%= servico.mediaValor.toFixed(2) %></option>
                <% }) %>
            </select>

            <label>Quantidade:</label>
            <input type="number" name="quantidade" min="1" value="1" required>

            <label>Valor Total (R$):</label>
            <input type="number" step="0.01" name="valor_total" required>

            <button class="btn" type="submit">Cadastrar Extra</button>
        </form>
    </div>
</body>
</html>
